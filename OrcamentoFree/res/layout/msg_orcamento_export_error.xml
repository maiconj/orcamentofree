<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orcamentoExportError"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@layout/border"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgOrcamentoMsgError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/black"
        android:contentDescription="@string/btn_produto_foto"
        android:src="@drawable/ic_action_error_red" />

    <TextView
        android:id="@+id/txtOrcamentoMsgError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="7dp"
        android:text="@string/msg_orcamento_export_error"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

</LinearLayout>